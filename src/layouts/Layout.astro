  title: string;
}

const { title } = Astro.props;

import "../styles/global.css";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/nagare tatto.svg" />
    <title>Nagare Tattoo</title>
