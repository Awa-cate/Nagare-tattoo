---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "../styles/global.css";
import Footer from "../components/Footer.astro";
import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Estudio de tatuajes especializado en diseños únicos y artisticos." />
    <meta name="keywords" content="tatuajes, arte, diseño, estudio de tatuajes, Nagare Tattoo" />
    <link rel="icon" type="image/svg+xml" href="/nagare tatto.svg" />
    <title>Nagare Tattoo</title>

    <SpeedInsights />
    <Analytics />
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html,
  body {
    background: #13151a;
    color: white;
    margin: 0;
    width: 100%;
    height: 100%;
    color-scheme: dark light;
  }

  p strong {
    color: red;
  }
</style>
