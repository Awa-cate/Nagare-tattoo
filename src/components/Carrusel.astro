---
const tattoos = [
  {
    id: 1,
    image: "/tattoo01.jpg",
    title: "BlackWork Tattoo",
    description: "Blackwork con elementos de realismo oscuro y simbología religiosa/mística."
  },
  {
    id: 2,
    image: "/tattoo02.jpg",
    title: "Japanese Style",
    description: "Traditional Japanese style dragon tattoo"
  },
  {
    id: 3,
    image: "/tattoo03.jpg",
    title: "Minimalist Design",
    description: "Simple and elegant minimalist tattoo"
  },
  {
    id: 4,
    image: "/tattoo04.jpg",
    title: "Geometric Pattern",
    description: "Modern geometric pattern design"
  },
  {
    id: 5,
    image: "/tattoo05.jpg",
    title: "Geometric Pattern",
    description: "Modern geometric pattern design"
  },
  {
    id: 6,
    image: "/tattoo06.jpg",
    title: "Geometric Pattern",
    description: "Modern geometric pattern design"
  }
];
---

<section class="px-4 bg-gradient-to-b from-gray-900 to-black backdrop-blur-lg">
  <div class="max-w-6xl mx-auto from-black to-gray-900">
    <h2 class="text-center text-2xl uppercase md:text-4xl font-extrabold mb-8 bg-white bg-clip-text text-transparent">
      Mis Trabajos
    </h2>

    <div class="swiper">
      <div class="swiper-wrapper">
        {
          tattoos.map(tattoo => (
            <div class="swiper-slide">
              <div class="relative group overflow-hidden rounded-xl shadow-lg shadow-primary-100/50">
                <img 
                  src={tattoo.image} 
                  alt={tattoo.title}
                  class="w-full h-[400px] object-cover transition-transform duration-500 group-hover:scale-110"
                />
                <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/90 via-black/60 to-transparent p-4 sm:p-6 translate-y-full transition-transform duration-300 group-hover:translate-y-0 touch-device:translate-y-0">
                  <h3 class="text-lg sm:text-xl font-extrabold text-white mb-1 sm:mb-2">{tattoo.title}</h3>
                  <p class="text-sm sm:text-base text-gray-200">{tattoo.description}</p>
                </div>
              </div>
            </div>
          ))
        }
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev hidden sm:flex"></div>
      <div class="swiper-button-next hidden sm:flex"></div>
    </div>
  </div>
</section>

<style>
  .swiper {
    width: 100%;
    padding: 0;
  }
  
  @media (min-width: 640px) {
    .swiper {
      padding: 2rem 1rem;
    }
  }

  .swiper-slide {
    width: 100%;
  }

  @media (min-width: 640px) {
    .swiper-slide {
      width: 300px;
      margin-right: 2rem;
    }
  }

  .swiper-button-next,
  .swiper-button-prev {
    color:black;
    transition: color 0.3s ease;
  }

  .swiper-button-next:hover,
  .swiper-button-prev:hover {
    color: white;
  }

  .swiper-pagination-bullet {
    background: #82181a;
    opacity: 0.5;
    transition: all 0.3s ease;
  }

  .swiper-pagination-bullet-active {
    background: white;
    opacity: 1;
  }
</style>

<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination, Autoplay } from 'swiper/modules';
  import 'swiper/css';
  import 'swiper/css/navigation';
  import 'swiper/css/pagination';

  new Swiper('.swiper', {
    modules: [Navigation, Pagination, Autoplay],
    slidesPerView: 'auto',
    spaceBetween: 30,
    loop: true,
    centeredSlides: true,
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  });
</script>